if os then
	print("starting at", os.time());
end

print("sample rate:", sample_rate);

ev = Event:new();

fork(function()
	local count = 0;
	while true do
		yield(ev);
		count = count + 1
		print(count, "sines");
		
		connect(SinOsc:new(100 + count * 100), speaker);
		speaker.gain = 1.0 / count;
	end
end)

for i = 1, 50, 1 do
	yield(sample_rate / 4);
	ev:broadcast();
end
