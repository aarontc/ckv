-- an example of how to define a class
Foo = {
	new = function(self)
		return {
			value = "foo.",
			print = function(self)
				print("you printed a Foo:", self.value);
			end,
		}
	end
};

foo = Foo:new();
foo:print();

function crazytown(n)
	print("entering crazytown");
	print(n);
	print("exiting crazytown");
end

print("this is lua");
print(1 + 1);
fork(crazytown, 10);

print("global BAR is:", global.BAR);
global.BAR = "frank sinatra";

yield(100);
print("done!");
